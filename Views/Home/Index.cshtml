@{
    ViewBag.Title = "Home Page";
}

<div ng-controller="CustomerCtrl">

    <div class="panel">
        <div class="panel-body">


            <div class="row">
                <div class="col-lg-4"></div>
                <div class="col-lg-4">
                    <form>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-12">
                                    <input type="text" disabled class="form-control text-right" value="{{output}}" />
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-lg btn-default" ng-click="input(1)">1</button>
                                </div>
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-lg btn-default" ng-click="input(2)">2</button>
                                </div>
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-lg btn-default" ng-click="input(3)">3</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-lg btn-default" ng-click="input(4)">4</button>
                                </div>
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-lg btn-default" ng-click="input(5)">5</button>
                                </div>
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-lg btn-default" ng-click="input(6)">6</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-lg btn-default" ng-click="input(7)">7</button>
                                </div>
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-lg btn-default" ng-click="input(8)">8</button>
                                </div>
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-lg btn-default"  ng-click="input(9)">9</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-lg btn-default" ng-click="clr()">Clr</button>
                                </div>
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-lg btn-default"  ng-click="input(0)">0</button>
                                </div>
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-lg btn-default" ng-click="equals()">=</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-4">
                    {{op}}
                    <div class="row">
                        <button type="button" class="btn btn-lg btn-default" ng-click="add()">+</button>
                        <button type="button" class="btn btn-lg btn-default" ng-click="mul()">*</button>
                        <button type="button" class="btn btn-lg btn-default" ng-click="sub()">-</button>
                        <button type="button" class="btn btn-lg btn-default" ng-click="div()">/</button>
                    </div>

                </div>

            </div>

        </div>
        

    </div>


    
    
</div>